<h1>All Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Movies</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.movies.count %></td>
        <td><%= link_to 'View', list_path(list) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create New List', new_list_path %></p>

